<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sd_list_selector"
    android:orientation="horizontal"
    android:padding="5dip"
     >

<!-- school name  -->
    <TextView
        android:id="@+id/sd_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eglinton Junior High School"
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="12dip"
        android:textStyle="bold"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="10dip"/>


    
<!-- school icon in the second line -->    
    <ImageView 
        android:id="@+id/sd_school_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sd_title"
        android:src="@drawable/catholic_school"
        android:layout_marginTop="20dip"      
        android:layout_alignLeft="@+id/sd_title"
        />
    
<!-- grade icon in the second line -->      
<ImageView 
    
    android:id="@+id/sd_grade_icon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/sd_school_icon"
    android:src="@drawable/jk78"
    android:layout_alignBottom="@+id/sd_school_icon"
    android:layout_marginLeft="5dip"
    
    />

<ImageView
    
    android:id="@+id/sd_daycare_icon"
        android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/sd_grade_icon"
    android:src="@drawable/fulltime_daycare"
    android:layout_alignBottom="@+id/sd_school_icon"
    android:layout_marginLeft="5dip"
    
    />

<TextView 
    
    android:id="@+id/sd_enrollment"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/sd_infoicon"
    android:text="Enrollment:360"
    android:layout_alignParentRight="true"

    android:layout_alignBaseline="@+id/sd_school_icon"
    android:layout_alignBottom="@+id/sd_school_icon"
    android:layout_marginTop="22dip"
    android:layout_marginRight="10dip"
    android:textSize="10dip"
    />

<TextView
    android:id="@+id/sd_address"
    android:layout_width="120dip"
    android:layout_height="wrap_content"
    android:layout_below="@+id/sd_school_icon"
    android:maxLines="10"
    android:text="851 Mount Pleasant Rd,     Toronto,      			Ontario M4P 2L5"
    android:textSize="10dip"
    android:layout_marginTop="22dip"
    android:layout_alignLeft="@+id/sd_title"
    
    ></TextView>

<Button
    android:id="@+id/sd_telephone"
    android:layout_width="100dip"
    android:layout_height="30dip"
    android:layout_below="@+id/sd_address"
    android:text="(416)393-0270"
    android:textSize="10dip"
    android:layout_marginTop="10dip"
    android:layout_marginLeft="30dip"
    ></Button>

<Button 
    android:id = "@+id/sd_website"
    android:layout_width="100dip"
    android:layout_height="30dip"
    android:layout_toRightOf="@+id/sd_telephone"
    android:layout_alignBottom="@+id/sd_telephone"
    android:layout_marginLeft="30dip"
    android:text="website"
    android:textSize="10dip"
    />

</RelativeLayout>