<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/in_list_selector"
    android:orientation="horizontal"
    android:padding="5dip"
     >


    
<!-- school icon in the second line -->    
    <ImageView 
        android:id="@+id/icon_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/catholic_school"
        android:layout_marginTop="10dip"     
        android:layout_marginLeft="20dip" 
        />


<TextView 
    
    android:id="@+id/icon_info"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/icon_type"
    android:layout_marginLeft="20dip"
    android:layout_centerHorizontal="true"
    android:text="Public School"
    android:layout_alignBottom="@+id/icon_type"
    android:textSize="13dip"
    />

</RelativeLayout>